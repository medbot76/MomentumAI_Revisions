modules = ["nodejs-20", "web", "python-3.11", "postgresql-16"]
run = "npm run dev"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"
packages = ["cargo", "freetype", "glibcLocales", "gumbo", "harfbuzz", "jbig2dec", "lcms2", "libiconv", "libimagequant", "libjpeg", "libjpeg_turbo", "libtiff", "libwebp", "libxcrypt", "mupdf", "openjpeg", "python311Packages.flask", "python311Packages.flask-cors", "python311Packages.flask-login", "python311Packages.flask-sqlalchemy", "python311Packages.gunicorn", "python311Packages.openai", "python311Packages.pillow", "python311Packages.psycopg2", "python311Packages.pydantic", "python311Packages.pyjwt", "python311Packages.pymupdf", "python311Packages.pypdf2", "python311Packages.python-docx", "python311Packages.reportlab", "python311Packages.requests", "python311Packages.tiktoken", "rustc", "swig", "tcl", "tk", "xcbuild", "zlib", "libstdcxx5", "gcc"]

[[ports]]
localPort = 5000
externalPort = 80

[env]
PORT = "5000"

[deployment]
deploymentTarget = "autoscale"
run = ["node", "./dist/index.cjs"]
build = ["npm", "run", "build"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export LD_LIBRARY_PATH=/nix/store/xvzz97yk73hw03v5dhhz3j47ggwf1yq1-gcc-13.2.0-lib/lib:$LD_LIBRARY_PATH && cd backend && python3 app.py"
waitForPort = 5000

[agent]
